# Production Environment Variables Template
# Copy this file and rename to .env.production
# Update all placeholder values with your actual production values

# =============================================
# MAIN BACKEND ENVIRONMENT VARIABLES
# =============================================

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/csv-sensei

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random_at_least_32_characters
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=10000
NODE_ENV=production

# Frontend URL (update after frontend deployment)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# =============================================
# CHATBOT BACKEND ENVIRONMENT VARIABLES
# =============================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Server Configuration
PORT=10000
NODE_ENV=production

# Frontend URL (update after frontend deployment)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================
# FRONTEND ENVIRONMENT VARIABLES (for Vercel)
# =============================================

# API URLs (update with your actual Render service URLs)
VITE_API_URL=https://veerifyai-4.onrender.com/api
VITE_CHATBOT_API_URL=https://your-chatbot-backend.onrender.com/api/chat

